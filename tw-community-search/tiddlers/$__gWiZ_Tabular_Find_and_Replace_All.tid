<td>
<$button tooltip="Modify Me" class="tc-btn-invisible">
<$click type="match" state=<<qualify "$:/state">> text="modify"/> 
<$action-mangletags find={{$:/temp/find!!text}} add={{$:/temp/add!!text}}/>
{{$:/core/images/close-button}}
</$button>
</td>
</tr>
</$list>
</table>